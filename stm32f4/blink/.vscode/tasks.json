{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: arm-none-eabi-gcc build active file",
            "command": "arm-none-eabi-gcc",
            "args": [
                "-mcpu=cortex-m4",
                "-mthumb",
                "-mfpu=fpv4-sp-d16",
                "-mfloat-abi=hard",
                "-DUSE_HAL_DRIVER",
                "-DSTM32F407xx",

                "-I","${workspaceFolder}/USB_HOST/App",
                "-I","${workspaceFolder}/USB_HOST/Target",
                "-I${workspaceFolder}/Core/Inc",
                //"-I","${workspaceFolder}/Drivers/STM32F4xx_HAL_Driver/Inc",
                "-I${workspaceFolder}/Drivers/STM32F4xx_HAL_Driver/Inc/",                
                "-I","${workspaceFolder}/Drivers/STM32F4xx_HAL_Driver/Inc/Legacy",
                "-I","${workspaceFolder}/Middlewares/ST/STM32_USB_Host_Library/Core/Inc",
                "-I","${workspaceFolder}/Middlewares/ST/STM32_USB_Host_Library/Class/CDC/Inc",
                "-I","${workspaceFolder}/Drivers/CMSIS/Device/ST/STM32F4xx/Include",
                "-I","${workspaceFolder}/Drivers/CMSIS/Include",
                "-Og",
                "-Wall",
                "-fdata-sections",
                "-ffunction-sections",
                "-g",
                "-gdwarf-2",
                "-MMD", 
                "-MP",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}